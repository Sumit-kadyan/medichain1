
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to get the user's assigned clinicId
    function getClinicId(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.clinicId;
    }

    // Lock down the 'users' collection.
    // Users can only read their own document to find out their clinicId.
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      // Deny writes for now to prevent users from changing their clinicId
      allow write: if false; 
    }
    
    // Rules for the main 'clinics' collection and its documents
    match /clinics/{clinicId} {
      // Allow read/write only if the user belongs to this clinic
      allow read, write: if request.auth != null && getClinicId(request.auth.uid) == clinicId;
      
      // Public read-only access for individual bills
      match /pharmacyQueue/{billId} {
        allow get: if true;
        // Keep writes restricted to clinic members
        allow list, write: if request.auth != null && get_clinic_id(request.auth.uid) == clinicId;
      }
      
      // Rules for all subcollections within a clinic (doctors, patients, etc.)
      match /{subcollection}/{docId} {
        // Allow read/write only if the user belongs to this clinic
        allow read, write: if request.auth != null && getClinicId(request.auth.uid) == clinicId;
      }
    }
  }
}
